// Isolate the leader; assert that everything still works
// Then heal the partition; assert leader rejoins successfully

CREATE 0.0
SLEEP 500
STATE

ISOLATELEADER
SLEEP 500

STATE
ASSERT LEADER_FUNCTIONALITY
ASSERT CLIENT_FUNCTIONALITY
ASSERT LOG_CONSISTENCY

HEAL
SLEEP 500
STATE

ASSERT LEADER_FUNCTIONALITY
ASSERT CLIENT_FUNCTIONALITY
ASSERT LOG_CONSISTENCY